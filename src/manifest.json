{
  "name": "DS Optimization",
  "description": "Get your dumb statistics!",
  "version": "1.2.0",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "storage"],
  "background": {
    "service_worker": "background/index.js"
  },
  "action": {
    "default_title": "Dumb Stats",
    "default_popup": "pages/popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["background/index.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "js": ["content/index.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}