{
  "manifest_version": 3,
  "name": "Dumb Stats",
  "version": "2.0",
  "description": "Get your dumb statistics!",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "/assets/icons/16.png",
      "24": "/assets/icons/24.png",
      "32": "/assets/icons/32.png"
    },
    "default_title": "Dumb Stats",
    "default_popup": "pages/popup/index.html"
  },
  "icons": {
    "16": "/assets/icons/16.png",
    "32": "/assets/icons/32.png",
    "128": "/assets/icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "background/index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "resources": [
        "chunks/*-*.js",
        "content/index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "content/import-index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}