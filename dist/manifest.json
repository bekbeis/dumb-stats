{
  "manifest_version": 3,
  "name": "DS Optimization",
  "version": "1.2.0",
  "description": "Get your dumb statistics!",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_title": "Dumb Stats",
    "default_popup": "pages/popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "background/index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "resources": [
        "chunks/*-*.js",
        "content/index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "content/import-index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}